{
  "name": "backend",
  "version": "1.0.0",
  "description": "An example backend implementation of a to do app using effect-s",
  "main": "server.js",
  "scripts": {
    "start": "npm run serve",
    "dev": "NODE_OPTIONS='--inspect=127.0.0.1:1707'  ts-node src/server.ts",
    "build": "npm run build-ts",
    "serve": "node dist/server.js",
    "test": "jest --coverage=false --verbose",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
    "watch-node": "nodemon dist/server.js",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "lint": "eslint src/*.ts",
    "lint-fix": "yarn lint --fix",
    "debug": "npm run build && npm run watch-debug",
    "serve-debug": "nodemon --inspect dist/server.js",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve-debug\"",
    "typecheck": "tsc --noEmit",
    "run-prettier": "prettier src/*.ts",
    "validate-prettiness": "yarn run-prettier -c",
    "make-prettier": "yarn run-prettier --write",
    "db-migrate": "node ./src/database/migrate.js"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@effect-ts/core": "^0.52.1",
    "@effect-ts/system": "^0.49.1",
    "@slonik/migrator": "^0.8.5",
    "@types/cors": "^2.8.12",
    "@types/pg": "^8.6.4",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.16.2",
    "http-errors": "^1.7.1",
    "morgan": "^1.9.1",
    "slonik": "^24.1.0",
    "ts-node": "^10.2.1",
    "uuid": "^8.3.2",
    "zod": "^3.11.6"
  },
  "devDependencies": {
    "@effect-ts/jest": "^0.33.0",
    "@types/express": "4.17.13",
    "@types/http-errors": "1.8.1",
    "@types/jest": "26.0.24",
    "@types/morgan": "1.9.3",
    "@types/node": "14.17.14",
    "@types/supertest": "2.0.11",
    "@types/uuid": "^8.3.1",
    "@typescript-eslint/eslint-plugin": "4.31.0",
    "@typescript-eslint/parser": "4.31.0",
    "concurrently": "6.2.1",
    "eslint": "7.32.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-import": "2.24.2",
    "jest": "26.6.3",
    "nodemon": "2.0.12",
    "prettier": "2.3.2",
    "supertest": "6.1.6",
    "ts-jest": "26.5.6",
    "typescript": "^4.6.0"
  }
}
